{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,        // <- temporary safety so build doesn't fail
    "skipLibCheck": true,
    "types": ["node"]              // <- important so `process` is known
  },
  "include": ["src"]
}
